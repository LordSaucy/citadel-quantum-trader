{
  "datasource": "Prometheus",
  "fieldConfig": {
    "defaults": {
      "unit": "short",
      "decimals": 0,
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green", "value": null },
          { "color": "orange", "value": 10 },
          { "color": "red", "value": 50 }
        ]
      }
    },
    "overrides": []
  },
  "gridPos": { "h": 4, "w": 12, "x": 0, "y": 26 },
  "id": 8,
  "options": {
    "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
